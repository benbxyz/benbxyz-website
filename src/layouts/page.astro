---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import BaseHead from '../components/base-head.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import FormattedDate from '../components/formatted-date.astro';
import bgGridImage from '../assets/images/bg-grid.png';

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-black text-gray-100">
    <Header />

    <main>
      <article class="container mx-auto max-w-2xl px-6">
        {
          heroImage && (
            <div class="mb-8">
              <img width={1020} height={510} src={heroImage} alt="" />
            </div>
          )
        }

        <div class="meta mb-8 text-center">
          <h1
            class="bg-gradient-to-r from-slate-200/60 to-slate-200 to-50% bg-clip-text text-3xl font-extrabold text-transparent md:text-4xl"
          >
            {title}
          </h1>
          {
            updatedDate && (
              <div class="date">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>

        <div class="prose prose-invert max-w-none">
          <slot />
        </div>

        <Image src={bgGridImage} alt="" class="mt-12" />
      </article>
    </main>
    <Footer />
  </body>
</html>
